<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorRedMain</item>
        <item name="colorPrimaryDark">@color/colorRedMain</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="HomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorRedMain</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Widget.AppCompat.SearchView.Custom" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@null</item>
    </style>
    <style name="OptionButtonProfile">
        <item name="android:clickable">true</item>
        <item name="android:padding">20dp</item>
        <item name="android:drawablePadding">40dp</item>
        <item name="background">?android:attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/Black</item>
    </style>
    <!-- Alert Dialog -->
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_border</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>


    </style>
</resources>
