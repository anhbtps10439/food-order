<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_insetEdge="none">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="#f00"
        app:cardCornerRadius="20sp"
        card_view:cardElevation="0dp"
        card_view:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:background="@drawable/shape"
            android:orientation="vertical"
            android:padding="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="Thêm món"
                    android:textColor="#fff"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                    android:layout_width="142dp"
                    android:layout_height="120dp"
                    app:siShape="@drawable/shape6"
                    android:src="@drawable/pizzaga"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="10dp"
                    app:siSquare="true"/>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="103dp"
                    android:layout_marginTop="92dp"
                    android:src="@drawable/camera" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginTop="20sp"
                android:gravity="center">

                <EditText
                    android:layout_width="320dp"
                    android:layout_height="41dp"

                    android:background="@drawable/shape3"
                    android:hint="Mã món"
                    android:paddingLeft="30dp"
                    android:textColorHint="#585858"
                    android:textSize="15sp" />


            </LinearLayout>

            <EditText
                android:layout_width="320dp"
                android:layout_height="41dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape3"
                android:hint="Tên món"
                android:paddingLeft="30dp"
                android:textColorHint="#585858"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="320dp"
                    android:layout_height="41dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape3"
                    android:hint="Đơn giá"
                    android:paddingLeft="30dp"
                    android:textColorHint="#585858"
                    android:textSize="15sp" />

                <EditText
                    android:layout_width="120dp"
                    android:layout_height="41dp"
                    android:layout_marginLeft="205dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape3"
                    android:backgroundTint="#F5A9F2"
                    android:hint="VND"
                    android:paddingLeft="50dp"

                    android:textColorHint="#000000"

                    android:textSize="15sp" />

            </RelativeLayout>


            <EditText
                android:textColorHint="#585858"
                android:layout_width="320dp"
                android:layout_height="41dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10sp"
                android:background="@drawable/shape3"
                android:hint="Mô tả"
                android:paddingLeft="30dp"
                android:textSize="15sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>