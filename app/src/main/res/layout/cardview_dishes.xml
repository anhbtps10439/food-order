<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardCornerRadius="8dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:id="@+id/iv_dish_image"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:background="@drawable/pizzaga"
            >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/shape2"
                    android:backgroundTint="#D8D8D8"
                    android:alpha="0.7"
                    android:padding="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView

                            android:id="@+id/tv_dish_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pizza gà"
                            android:textColor="#000000"
                            android:textStyle="bold"

                            android:textSize="15dp"/>
                        <TextView
                            android:id="@+id/tv_dish_des"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="10dp"
                            android:maxLines="2"
                            android:layout_marginTop="11dp"
                            android:ellipsize="end"
                            android:text="Công nghệ chế biến làm pizza đến từ Nhật Bản"/>
                        <TextView

                            android:id="@+id/tv_dish_prices"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_marginTop="13dp"
                            android:text="1.000.000 VND"
                            />

                        <TextView
                            android:id="@+id/tv_xem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="xem"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textSize="9dp" />

                    </LinearLayout>
                </FrameLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
