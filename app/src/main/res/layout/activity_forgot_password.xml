<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activity.SignInOut.ForgotPassword">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="Quên mật khẩu"
        android:textColor="#FBF8EF"
        android:textSize="50dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/et_id"
        android:layout_width="330dp"
        android:layout_height="65dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/shape_fe"
        android:drawableLeft="@drawable/ic_phone_black_24dp"
        android:drawablePadding="20dp"
        android:elevation="5dp"
        android:hint="Số điện thoại"
        android:padding="15dp"
        android:textSize="20dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:background="@drawable/shape"
        android:onClick="moveToChangePass"
        android:fontFamily="@font/segoe_ui_bold"
        android:text="Xác nhận"
        android:textColor="@color/colorWhite"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="pleaseCallHelp"
           android:fontFamily="@font/segoe_ui_bold"
            android:text="Tôi không nhớ số điện thoại của tôi"
            android:textColor="@color/colorRedMain"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>